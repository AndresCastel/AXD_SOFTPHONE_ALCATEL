<Window x:Class="Axede.WPF.Softphone.Applications.UtilControls.PopUp.PopControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PopControl" Height="297" Width="300" WindowStyle="None" MouseUp="Window_MouseUp_1" Background="Transparent" AllowsTransparency="True">
    <Grid Width="auto" Height="auto">
        <Border CornerRadius="20"  BorderThickness="5" Height="300" Width="300" MouseDown="Border_MouseDown_1" >

            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0,0" StartPoint="0.5,1.3" >
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Color="#FFC8C8C8" Offset="0"/>
                        <GradientStop Color="#FF747474" Offset="0.495"/>
                        <GradientStop Color="#FFD0D0D0" Offset="0.81"/>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC8C8C8" Offset="0"/>
                    <GradientStop Color="#FF292929" Offset="0.314"/>
                    <GradientStop Color="#FFD0D0D0" Offset="0.81"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</Window>
