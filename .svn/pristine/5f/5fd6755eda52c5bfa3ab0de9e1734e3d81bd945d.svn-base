<Window xmlns:User_Controls="clr-namespace:Axede.WPF.Softphone.Applications.GUI.User_Controls"  x:Class="Axede.WPF.Softphone.Applications.UtilControls.PopUp.ControlVideo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wf ="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        Title="PopControl" Height="395.759" Width="525.887"  WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        AllowsTransparency="False"
        Background="Transparent" MouseDown="Window_MouseDown"  
        WindowStartupLocation="CenterScreen" MouseUp="Window_MouseUp_1" >
    <Grid Width="auto" Height="auto" Margin="0,0,2,0">
        <Border BorderBrush="Black" BorderThickness="1.5" CornerRadius="10" >
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC8C8C8" Offset="0"/>
                    <GradientStop Color="#FF292929" Offset="0.314"/>
                    <GradientStop Color="#FFD0D0D0" Offset="0.81"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Button Template="{DynamicResource GlassButtonRED}"  x:Name="Salir" Content="X" Click="ButtonClose_Click" FontFamily="Kartika" 
                    FontSize="14.667" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right" Width="56" Height="22" VerticalAlignment="Top" 
                    Margin="0,0,10,0" />

                <Button Template="{DynamicResource GlassButtonYellow}" x:Name="Minimize"  Content="_" FontFamily="Kartika" FontSize="14.667" 
                    Foreground="White" FontWeight="Bold" Click="Minimizar_Click" Height="22" VerticalAlignment="Top" HorizontalAlignment="Right" 
                    Width="17" Margin="0,0,67,0" />
            </Grid>
        </Border>
        <WindowsFormsHost x:Name="remoteVideoWindow" Margin="26,29,19,80">
            <wf:Panel  x:Name="remoteVideoPanel" />
        </WindowsFormsHost>
        <Button Content="Local Video" x:Name="ButtonLocalVideo" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="137" Margin="64,345,0,0" Click="Button_Click"/>
        <Button Content="Send Video" x:Name="ButtonSendVideo" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="137" Margin="299,345,0,0" Click="ButtonSendVideo_Click" />
        <WindowsFormsHost  x:Name="localVideoWindow" Margin="35,178,346,108">
            <wf:Panel  x:Name="localVideoPanel" />
        </WindowsFormsHost>
        <Separator Height="3" Background="Black" Margin="0,329,0,64" />
        <Separator Height="3" Background="Black" Margin="0,326,0,67" />
        <Separator Height="3" Background="White" Margin="0,329,0,64" >
            <Separator.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
            </Separator.Effect>
        </Separator>
    </Grid>
</Window>
