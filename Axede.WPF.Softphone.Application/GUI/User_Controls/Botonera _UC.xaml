<UserControl x:Class="Axede.WPF.Softphone.Applications.GUI.User_Controls.Botonera__UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="auto" Width="auto">
    <Canvas Height="175" Width="180">

        <Grid Width="180" Height="175">
            <Grid.RowDefinitions >
                <RowDefinition  Height="41" />
                <RowDefinition Height="41"/>
                <RowDefinition Height="41"/>
                <RowDefinition  Height="41"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="46"/>
                <ColumnDefinition Width="46" />
                <ColumnDefinition Width="46"/>
                <ColumnDefinition Width="46"/>
            </Grid.ColumnDefinitions>
            <Button Name="Btn1" Style="{StaticResource GlassButtonSem}" Grid.Row="0" Grid.Column="0"  Height="34" Width="38" HorizontalAlignment="Center" Background="White" Click="BtnAccion_Click"  >
                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                    <Label Content="1" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="22" Margin="0,0,0,0"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>
            <Button Name="Btn2" Style="{StaticResource GlassButtonSem}"  Height="34" Width="38" Grid.Row="0" HorizontalAlignment="Center" Grid.Column="1"  Background="White"   Click="BtnAccion_Click" >
                <StackPanel Orientation="Horizontal" >
                    <Label Content="2" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="22"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>
            <Button Name="Btn4" Style="{StaticResource GlassButtonSem}" Grid.Row="1" HorizontalAlignment="Center" Grid.Column="0" Height="34" Width="38"  Background="White"   Click="BtnAccion_Click"  >
                <StackPanel Orientation="Horizontal" >
                    <Label Content="4" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="22"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>
            <Button Name="Btn3" Style="{StaticResource GlassButtonSem}" Grid.Row="0" HorizontalAlignment="Center" Grid.Column="2"  Height="34" Width="38"  Background="White"   Click="BtnAccion_Click">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="3" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="22"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>
            <Button Name="Btn5" Style="{StaticResource GlassButtonSem}" Grid.Row="1" HorizontalAlignment="Center" Grid.Column="1"  Height="34" Width="38"  Background="White"   Click="BtnAccion_Click" Margin="3,3,0,0" VerticalAlignment="Top" >
                <StackPanel Orientation="Horizontal" >
                    <Label Content="5" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="22"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>

            <Button Name="Btn6" Style="{StaticResource GlassButtonSem}" Grid.Row="1" HorizontalAlignment="Center" Grid.Column="2"  Height="34" Width="38"  Background="White"   Click="BtnAccion_Click" Margin="3,3,0,0" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="6" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="22"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>

            <Button Name="Btn7" Style="{StaticResource GlassButtonSem}" Grid.Row="2" HorizontalAlignment="Center" Grid.Column="0"  Height="34" Width="38"  Background="White"   Click="BtnAccion_Click" Margin="3">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="7" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="22"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>

            <Button Name="Btn8" Style="{StaticResource GlassButtonSem}" Grid.Row="2" HorizontalAlignment="Center" Grid.Column="1"  Height="34" Width="38" Background="White"   Click="BtnAccion_Click" Margin="3">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="8" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="22"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>

            <Button Name="Btn9" Style="{StaticResource GlassButtonSem}" Grid.Row="2" HorizontalAlignment="Center" Grid.Column="2"  Height="34" Width="38"  Background="White"   Click="BtnAccion_Click" Margin="3">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="9" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="22"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>

            <Button Name="BtnX" Style="{StaticResource GlassButtonSem}" Grid.Row="3" HorizontalAlignment="Center" Grid.Column="0"  Height="34" Width="38"  Background="White"   Click="BtnAccion_Click" Margin="2,2,4,0" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="*" Foreground="#FF1A341B" FontFamily="Stencil" VerticalAlignment="Top" FontSize="30"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>

            <Button Name="Btn0" Style="{StaticResource GlassButtonSem}" Grid.Row="3" HorizontalAlignment="Center" Grid.Column="1"  Height="34" Width="38"  Background="White"   Click="BtnAccion_Click" Margin="3,3,0,0" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="0" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="20"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>

            <Button Name="BtnNum" Style="{StaticResource GlassButtonSem}" Grid.Row="3" HorizontalAlignment="Center" Grid.Column="2"  Height="34" Width="38"  Background="White"   Click="BtnAccion_Click" Margin="3,3,0,0" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="#" Foreground="#FF1A341B" FontFamily="Stencil" FontSize="20"/>
                </StackPanel>
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5"/>
                </Button.Effect>
            </Button>
        </Grid>
    </Canvas>
</UserControl>
